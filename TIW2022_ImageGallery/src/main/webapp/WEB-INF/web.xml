<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <display-name>TIW-ImageGallery</display-name>
    <context-param>
        <param-name>dbUrl</param-name>
        <param-value>jdbc:mysql://localhost:3306/progettotiw?serverTimezone=UTC</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>psw?</param-value>
    </context-param>
    <context-param>
        <param-name>dbDriver</param-name>
        <param-value>com.mysql.cj.jdbc.Driver</param-value>
    </context-param>
    <filter>
        <filter-name>HomeChecker</filter-name>
        <filter-class>it.polimi.tiw.project.filters.HomeChecker</filter-class>
    </filter>
    <filter>
        <filter-name>LoginChecker</filter-name>
        <filter-class>it.polimi.tiw.project.filters.LoginChecker</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>LoginChecker</filter-name>
        <url-pattern>/LoginRegister</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>HomeChecker</filter-name>
        <url-pattern>/AddComment</url-pattern>
        <url-pattern>/AddToAlbum</url-pattern>
        <url-pattern>/CreateAlbum</url-pattern>
        <url-pattern>/DownloadPhoto</url-pattern>
        <url-pattern>/ShowAlbum</url-pattern>
        <url-pattern>/ShowHomepage</url-pattern>
        <url-pattern>/UploadPhoto</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>